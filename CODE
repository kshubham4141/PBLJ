import java.io.*;
import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    List<String> listStrings = new ArrayList<String>();
listStrings.add("One");
listStrings.add("Two");
listStrings.add("Three");
listStrings.add("Four");
 System.out.println(listStrings);
 System.out.println();
 // searching 
 // element is present 
if (listStrings.contains("Three")) {
    System.out.println("Found the element");
} else {
    System.out.println("There is no such element");
}
// element which is not present
if (listStrings.contains("three")) {
    System.out.println("Found the element");
} else {
    System.out.println("There is no such element");
}
// 
String element = listStrings.get(1);
 System.out.println("element at 1 :"+element);
String  number = listStrings.get(3);
 System.out.println("element at 3 :"+number);
 System.out.println();
//removing elements 
// by index
 System.out.print("list before removing :");
 
 System.out.println(listStrings);
 System.out.println();
listStrings.remove(2);
// by value 
listStrings.remove("Two");
// removing that is not present in the 
if (listStrings.remove("Ten")) {
    System.out.println("Removed");
} else {
    System.out.println("There is no such element");
}
System.out.println();
System.out.print("list after removing :");
 System.out.println(listStrings);

	}
}
